<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="Container" class="container">
        <header class="navbar navbar-pizza">
            <div class="container-fluid">
                <div id="Logo" class="pull-left">
                    @Html.ActionLink("Pizza Shop", "", "", null, new { @class = "navbar-logo" })
                </div>
                <div id="OrderPhoneNumber" class="navbar-right">
                    <p>Zamówienia telefoniczne: <span>Dostępne</span></p> <!-- tutaj status z bazy -->
                    <p>Pod numerem: @Html.Action("DeliveryContact","Home")</p>
                </div>
                <div class="clearfix"></div>
                <nav class="navbar-right">
                    @Html.Action("SiteMenuPartial", "Home")
                </nav>
            </div>
        </header>
        <main class="container-fluid">
            <div class="row">
                <div id="PizzaPrezentation" class="col-md-12">
                    <img src="~/Content/Images/pizzaSlide_1.jpg" />
                </div>
                <div id="MenuItems" class="col-md-2">
                    @Html.Partial("_MenuCategoryPartial",new { area="" })
                </div>
                <div id="MenuItemsResult" class="col-md-10">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>
    <footer class="col-md-12">
        @Html.Action("ShopContactPartial", "Home")
        @Html.Action("OpeningHoursPartial", "Home")
        <div class="col-md-3">
            <h4>Oferujemy:</h4>
            <hr />
            <p>Pizza,Sałatki, Napoje,Sosy</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/basic")
    @Scripts.Render("~/bundles/jqueryUI")
    @RenderSection("scripts", required: false)
</body>
</html>
