
@{
    ViewBag.Title = "Nowa rola";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model PizzaShop.Areas.Admin.Models.ViewModels.RoleViewModel

<div class="col-md-6 col-md-offset-3">
    <h3>@ViewBag.Title.</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m=>m.Name, new { @class="col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m=>m.Name, new { @class="form-control" })
            </div>
        </div>
        <div class="col-md-3 col-md-offset-9 form-group">
            <input type="submit" value="Dodaj role" class="btn btn-default btn-block" />
        </div>
    }
</div>

