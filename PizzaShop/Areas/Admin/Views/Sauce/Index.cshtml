
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model IEnumerable<PizzaShop.Models.PizzaShopModels.Entities.Sauce>

<div class="col-md-12">
    <h3 class="h3Title pull-left">Sosy</h3>
    <button data-toggle="modal" data-target="#ModalBox" data-ajax-url="@Url.Action("CreatePartial","Sauce",new { area="admin" })" )
            type="button" class="btnCreate pull-right col-md-1 btn btn-success">
        <span>Nowy</span>
    </button>
    <table id="Table" class="table table-responsive">
        <tr>
            <th>Nazwa</th>
            <th>Cena</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var sauce in Model)
            {
            <tr>
                <td>@sauce.Name</td>
                <td>@string.Format("{0:C}", sauce.Price)</td>
                <td>
                    <button type="button" role="button" class="btn btn-warning btnEdit" data-id="@sauce.ID"
                            data-toggle="modal" data-target="#ModalBox" data-ajax-url="@Url.Action("Edit","Sauce",new { area="admin" })">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                </td>
                <td>
                    <button data-id="@sauce.ID" type="submit" role="button" class="btn btn-danger btnDelete"
                            data-toggle="modal" data-target="#ModalBox" data-ajax-url="@Url.Action("Delete","Sauce",new { area="admin" })">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                </td>
            </tr>
        }
    </table>
</div>

<div id="ModalBox" class="modal fade" tabindex="-1" role="dialog" data-backdrop="false">
    <!-- tutaj ajaxem laduje partial view z okienkiem modal -->
    <!-- okienka edit i create -->
</div>